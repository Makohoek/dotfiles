bindsym XF86AudioMute         exec "pactl set-sink-mute 0 toggle"
bindsym XF86AudioRaiseVolume  exec "pactl set-sink-volume 0 +5%"
bindsym XF86AudioLowerVolume  exec "pactl set-sink-volume 0 -5%"

bindsym XF86Search exec "~/.screenlayout/toggle_mode.sh"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the window’s width.
        bindsym h resize shrink width 10 px or 10 ppt
        # Pressing down will grow the window’s height.
        bindsym j resize grow height 10 px or 10 ppt
        # Pressing up will shrink the window’s height.
        bindsym k resize shrink height 10 px or 10 ppt
        # Pressing right will grow the window’s width.
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# resize window (you can also use the mouse for that)
set $mode_system System: [l]ock [s]uspend
bindsym $mod+Shift+s mode "$mode_system"

mode "$mode_system" {
		bindsym l exec "i3lock-fancy", mode "default"
		bindsym s exec "systemctl suspend", mode "default"

		# back to normal: Enter or Escape
		bindsym Return mode "default"
		bindsym Escape mode "default"
}

# colors come from zenburn emacs theme:
# https://github.com/bbatsov/zenburn-emacs/blob/master/zenburn-theme.el
# colorscheme
set $zenburn-fg     #DCDCCC
set $zenburn-fg-1   #656555
set $zenburn-bg-05  #383838
set $zenburn-bg+1   #4F4F4F
set $zenburn-yellow #F0DFAF
set $zenburn-blue   #8CD0D3
set $zenburn-blue-3 #5C888B
set $zenburn-red    #CC9393
set $zenburn-red-3  #9C6363

# class                 border  backgr. text    indicator child_border
client.unfocused $zenburn-bg-05 $zenburn-bg-05 $zenburn-fg #333333
client.focused_inactive $zenburn-bg-05 $zenburn-fg-1 $zenburn-fg #000000
client.focused $zenburn-bg-05 $zenburn-fg-1 $zenburn-fg #000000

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
 font pango:Hack 9
 position top
 status_command i3status

 strip_workspace_numbers yes
 # do not do anything with scrolling wheels
 bindsym button4 nop
 bindsym button5 nop

 separator_symbol "|"

 colors {
   background $zenburn-bg-05
   statusline $zenburn-fg
   separator  $zenburn-bg+1

   # colors are:
   # <colorclass> <border> <background> <text>
   focused_workspace  $zenburn-fg    $zenburn-fg    $zenburn-bg-05
   inactive_workspace $zenburn-bg-05 $zenburn-bg-05 $zenburn-fg

   urgent_workspace   $zenburn-red-3 $zenburn-red-3 $zenburn-bg-05
   binding_mode       $zenburn-bg-05 $zenburn-yellow $zenburn-bg-05
 }
